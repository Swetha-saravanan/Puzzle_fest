<% t = User.last%>
<%if t%>
<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              
            </div>
            <h4 class="mb-2"><%= t.name%></h4>

        <div class="d-flex justify-content-between text-center mt-5 mb-2">
        <div class="edit_profile">
        <form class="form-box px-3" action="/save" method="post" onsubmit="check()">
        <input type="hidden" name="authenticity_token" value=" form_authenticity_token ">
        <div class="form-input">
            <%# <span><i class="fa-solid fa-user"></i></span> %>
            <p>Name:</p> <input type="text" name="users[name]"  value="<%= t.name%>"placeholder="Username" tabindex="10" required>
        </div>
        <div class="form-input">
            <%# <span><i class="fa fa-envelope-o"></i></span> %>
            <input type="email" name="users[email]" value="<%= t.email%>"placeholder="Mail Address" tabindex="10" required>
        </div>
        <div class="form-input">
            <%# <span><i class="fa fa-envelope-o"></i></span> %>
            <input type="date" name="users[dob]" placeholder="Mail Address" tabindex="10" required>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-block ">
                Save
            </button>
        </div>
    </form>

      </div>
    </div>
  </div>
<%end%>
</section>
