<%Puzzle.all.each do |t|%>
<div class="create_game">
<form action="/question" method="post" >
<a href="/update"><button>Edit</button></a>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<div class = "question">
 <input type="text" name="question" value = "<%= t.question%>"class="qtn">
</div>
<div class="row1">
<div class="opt1">
<input type="radio"name="option" value="a">
<input type="text" name="option1"value = "<%= t.option1%>" required>
</div>
<div class="opt2" >
<input type="radio" name="option"  value="b">
<input type="text" name="option2" value = "<%= t.option2%>" required>
</div>
</div>
<div class="row2">
<div class="opt3">
<input type="radio"  name="option" value="c">
<input type="text" name="option3" value = "<%= t.option3%>" required>
</div>
<div class="opt4">
<input type="radio"  name="option" value="d">
<input type="text" name="option4" value = "<%= t.option4%>" required>
</div>
</div>
</form>
</div>
<%end%>
<% if flash[:error]%>
<p><%= flash[:error]%></p>
<%end%>
