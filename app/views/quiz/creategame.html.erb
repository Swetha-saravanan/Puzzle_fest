<%= render partial:"list"%>
<div>
<form action="/question" method="post" >
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<div class = "question">
 <input type="text" name="question" class="qtn">
</div>
<div class="row1">
