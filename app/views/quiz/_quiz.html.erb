<div id="question">
        <form action="/question" method="post" id="main-form">
            <input type="hidden" name="authenticity_token" value=" form_authenticity_token ">
            <% if $cur_display_question %>
            <textarea name="question" placeholder="Start type question here"><%=$cur_display_question["question"]%></textarea>
            <% else %>
            <textarea name="question" placeholder="Start type question here"></textarea>
            <% end %>

    </div>
    <div class="vertical"></div>
    <div id="answer">
        <div class="opt1 opt">
            <input type="radio" id="html" name="option" placeholder="Add answer" value="a">
            <% if $cur_display_question %>
            <input type="text" name="option1" placeholder="Add answer 1" value='<%= $cur_display_question["option1"] %>' required>
            <% else%>
            <input type="text" name="option1" placeholder="Add answer 1"  required>
             <%end%>
        </div><br>
        <div class="opt2 opt">
            <input type="radio" id="html" name="option" value="b">
            <% if $cur_display_question %>
            <input type="text" name="option2" placeholder="Add answer 2" value='<%= $cur_display_question["option2"] %>' required>
            <% else%>
            <input type="text" name="option2" placeholder="Add answer 2"  required>
            <%end%>
        </div><br>
        <div class="opt3 opt">
            <input type="radio" id="html" name="option" value="c">
             <% if $cur_display_question %>
            <input type="text" name="option3" placeholder="Add answer 3" value='<%= $cur_display_question["option3"] %>' required>
            <%else%>
            <input type="text" name="option3" placeholder="Add answer 3"  required>
            <%end%>

        </div><br>
        <div class="opt4 opt">
            <input type="radio" id="html" name="option" value="d">$cur_display_question

            <% if $cur_display_question %>
            <input type="text" name="option4" placeholder="Add answer 4" value='<%= $cur_display_question["option4"] %>' required>
            <%else%>
            <input type="text" name="option4" placeholder="Add answer 4"  required>
            <%end%>
        </div><br>
        <button type="submit" id="save" value="Add">Save</button>
        </form>
    </div>
