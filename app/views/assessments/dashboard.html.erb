<div class="reports">
<% logged_user = User.find(session[:id]) %>
<% if logged_user %>
<div class="dashboard">Swetha</div>
<canvas id="myChart" width="200px" height="100px" data-labels="<%= @data_keys %>" data-data="<%= @data_values %>" ></canvas>

<div class="reports_table">
<table class="table table-hover">

  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Correct answer</th>
      <th scope="col">Wrong answers</th>
      <th scope="col">Score</th>
    </tr>
  </thead>
  <tbody>



    <tr>
      <th scope="row"><%= logged_user.name%></th>
      <td><%=Report.where("users_id=? AND score=?" , logged_user.id , 100).count%></td>
      <td><%=Report.where("users_id=? AND score=?" , logged_user.id , 0).count%></td>
      <td><%=Report.where("users_id=? AND score=?" , 1 , 100).sum(:score)%></td>
    </tr>
  </tbody>
</table>
</div>
<%else%>
<%end%>
