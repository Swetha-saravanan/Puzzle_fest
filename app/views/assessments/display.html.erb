<div class="host">
<input type="search"><button>search</button>
<% logged_user = User.find(session[:id]) %>
<%= logged_user["id"]%>
<% assessments =Assessment.where(users_id: logged_user["id"])%>
<%assessments.each do |t|%>
<div class="assessment_name">

<%= t.name%><br>
<%= Puzzle.where(assessments_id: t.id).count%>
<%= t.random_no%>
<%=image_tag( "puzzle.avif", alt: "like", height:"100",width:"120") %>

<a href="/display_questions/<%=t.id%>"><button>start</button></a>
</div>
<%end%>
</div>
<%=image_tag( "host.jpeg", alt: "like" ,class: "host-bg") %>
