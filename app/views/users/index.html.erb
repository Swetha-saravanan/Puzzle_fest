<div class="signin" id="up">
    <form action="/register" class="form-box px-3" method="post" onsubmit="check()">

        <div class="form-input">
            <span><em class="fa-solid fa-user"></em></span>
            <input type="text" name="users[name]" placeholder="Username" pattern="[A-Za-z]{3,255}" title="User name must be greater than 3 characters" tabindex="10" required>
        </div>
        <div class="form-input">
            <span><em class="fa fa-envelope-o"></em></span>
            <input type="email" name="users[email]" placeholder="Mail Address" pattern="[a-z0-9._-]+@[a-z0-9._-]+\.[a-z]{2,}$" tabindex="10" required>
        </div>
        <div class="form-input">
            <span><em class="fa-solid fa-mobile"></em></span>
            <input type="tel" name="users[phone_no]" placeholder="Phone number" title="Value must be less than or equal to 9999999999" min="6000000000" max="9999999999"tabindex="10" required>
        </div>
        <div class="form-input">
            <span><em class="fa-solid fa-key"></em></span>
            <input type="password" id="pwd" name="users[password]"  pattern="[A-Za-z0-9]{5,12}"title="Password should contain upcase , downcase letters and numbers"  placeholder="Create Password" required>
        </div>
        <div class="form-input">
            <span><em class="fa-solid fa-key"></em></span>
            <input type="password" id="cpwd" name="Confirm_Password" pattern="[A-Za-z0-9]{5,12}" title="Password should contain upcase , downcase letters and numbers"placeholder="Confirm Password" required>
        </div>
        <div class="mb-3">
            <div class="custom-control custom-checkbox">
                <input type="checkbox"  id="check" onchange="toggle()" name=""><p>Show password</p>
                <%# <label class="custom-control-label" for="cb1">Show password</label> %>
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-block ">
                CREATE ACCOUNT
            </button>
        </div>
        <div class="text-right">
            <a href="forgot_pwd" class="forget-link" style="color:#5c7859">
                Forgot Password?
            </a>
        </div>
        <div class="mb-2" style="color:black">
            Always have an account
            <a href="/login" class="register-link" style="color:#5c7859">
Login
            </a>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        </div>
    </form>
    <div>
        <%=image_tag( "signup_img.webp", alt: "like", class:"signup_image" ) %>
    </div>
</div>
